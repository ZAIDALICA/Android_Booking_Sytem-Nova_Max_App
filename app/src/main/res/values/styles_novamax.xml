<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Novamax" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_novamax</item>
        <item name="popupMenuStyle">@style/PopupMenu.Novamax</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Novamax</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Novamax</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Novamax</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Novamax</item>
        <item name="actionModeBackground">@drawable/cab_background_top_novamax</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_novamax</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Novamax</item>

                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Novamax.Widget</item>

    </style>

    <style name="ActionBar.Solid.Novamax" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_novamax</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_novamax</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_novamax</item>
        <item name="progressBarStyle">@style/ProgressBar.Novamax</item>
    </style>

    <style name="ActionBar.Transparent.Novamax" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_novamax</item>
        <item name="progressBarStyle">@style/ProgressBar.Novamax</item>
    </style>
	
    <style name="PopupMenu.Novamax" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_novamax</item>	
    </style>
	
    <style name="DropDownListView.Novamax" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_novamax</item>
    </style>

    <style name="ActionBarTabStyle.Novamax" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_novamax</item>
    </style>
	
    <style name="DropDownNav.Novamax" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_novamax</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_novamax</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_novamax</item>
    </style>
    
    <style name="ProgressBar.Novamax" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_novamax</item>
    </style>
    
    <style name="ActionButton.CloseMode.Novamax" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_novamax</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Novamax.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Novamax</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Novamax</item>
    </style>

</resources>